@model IEnumerable<Suntek.Models.Banner>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header text-center">Danh sách banner</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/admin/banner/create" class="btn btn-info"><i class="fa fa-plus"></i> Tạo mới</a>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Link</th>
                                <th>Sắp xếp</th>
                                <th>Phân loại</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="@item.Image" width="100" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Link</td>
                                <td>@item.Sort</td>
                                <td>
                                    @if (item.IDCate == 1)
                                    {
                                        <span class="alert-info">Banner</span>
                                    }
                                    else if (item.IDCate == 2)
                                    {
                                        <span class="alert-link">Logo</span>
                                    }
                                    @*else if (item.IDCate == 3)
                                    {
                                        <span class="alert-danger">Trạm bảo hành</span>
                                    }
                                    else if (item.IDCate == 4)
                                    {
                                        <span class="alert-success">Số Hotline</span>
                                    }*@
                                </td>
                                <td>
                                    <a href="/admin/banner/edit/@item.ID" class="btn"><i class="fa fa-edit"></i></a>
                                    <a href="/admin/banner/delete/@item.ID" class="btn"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>




