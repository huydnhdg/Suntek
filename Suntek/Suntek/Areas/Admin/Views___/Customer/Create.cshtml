@model Suntek.Models.Customer

@{
    ViewBag.Title = "Create";
    List<Suntek.Models.Province> lprovince = (List<Suntek.Models.Province>)TempData["province"];
}
@section scripts{
    <script>
        function GetDistrict() {
            var name = $("#Province").val();
            $("#District").html("");
            $.ajax
                ({
                    url: '/Active/GetDistrict',
                    type: 'POST',
                    datatype: 'application/json',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        name: name
                    }),
                    success: function (result) {
                        $.each($.parseJSON(result), function (i, city) {
                            $("#District").append
                                ($('<option></option>').val(city).html(city))
                        })
                    },
                    error: function () {
                        alert("Hệ thống xảy ra lỗi.")
                    },
                });
        }
        function GetWard() {
            var name = $("#District").val();
            $("#Ward").html("");
            $.ajax
                ({
                    url: '/Active/GetWard',
                    type: 'POST',
                    datatype: 'application/json',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        name: name
                    }),
                    success: function (result) {
                        $.each($.parseJSON(result), function (i, city) {
                            $("#Ward").append
                                ($('<option></option>').val(city).html(city))
                        })
                    },
                    error: function () {
                        alert("Hệ thống xảy ra lỗi.")
                    },
                });
        }
    </script>
}
