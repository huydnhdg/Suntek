@model IEnumerable<Suntek.Models.Key>
@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
            });            
        });
    </script>
    }
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Trạm bảo hành</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-right">
                    <a href="/admin/key/create" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới</a>
                    @*<a href="/admin/active/uploadfile" type="button" class="btn btn-success"><i class="fa fa-upload" aria-hidden="true"></i> Kích hoạt</a>*@
                    <a id="btnExport" class="btn btn-success"><i class="fa fa-download" aria-hidden="true"></i> Export File</a>
                </div>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tên trạm</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Address @item.Ward @item.District @item.Province
                                    </td>
                                    <td>
                                        @item.Phone
                                    </td>
                                    <td>
                                        @if (User.IsInRole("Partner") || User.IsInRole("Admin"))
                                        {
                                            <a class="btn" href="/admin/key/edit/@item.Id"><i class="fa fa-edit fa-fw"></i></a>
                                            <a class="btn" href="/admin/key/delete/@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



