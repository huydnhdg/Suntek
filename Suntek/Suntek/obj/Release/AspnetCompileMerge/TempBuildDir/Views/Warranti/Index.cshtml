                                    <div class="col-md-8">
                                        @Html.Editor("Productname", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <p class="col-md-4">Model sản phẩm: *</p>
                                    <div class="col-md-8">
                                        @Html.Editor("Sub", new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
