@model Suntek.Models.TempSm

@{
    ViewBag.Title = "Cấu hình hệ thống Active bằng SMS";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Cấu hình hệ thống Active bằng SMS</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.Label("Keyword", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Command_Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Command_Code, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kích hoạt bằng SMS", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ActiveSms, new { htmlAttributes = new { @class = "form-control", placeholder = "Kích hoạt = 1, Không=0" } })
            @Html.ValidationMessageFor(model => model.ActiveSms, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kích hoạt bằng Đại lý", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ActiveByAgent, new { htmlAttributes = new { @class = "form-control", placeholder = "Kích hoạt = 1, Không Ghi nhận =0" } })
            @Html.ValidationMessageFor(model => model.ActiveByAgent, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
